<h1>All Tags</h1>

<ul id="tags">
  <% @tags.sort_by { |tag| tag.name }.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag),
          class: 'tag_title', id: "tag_#{tag.id}" %>
      <% if logged_in? %>
        (<%= link_to "delete", tag_path(tag),
          method: :delete, data: {confirm: "Really delete the tag?"} %>)
      <% end %>
    </li>
  <% end %>
</ul>
