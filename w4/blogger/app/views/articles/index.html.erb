<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
  <li>
    <%= link_to article.title, article_path(article),
        class: 'article_title', id: "article_#{article.id}" %>
  </li>
  <% end %>
  <li>
    <%= link_to "All Tags", tags_path %>
  </li>
</ul>

<% if logged_in? %>
<p>
  <%= link_to "Create a New Article", new_article_path, class: "new_article" %>
</p>
<% end %>
